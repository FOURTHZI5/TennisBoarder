<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/name_of_player_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_player"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/point_of_player_two"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/point_of_player_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/name_of_player_two"
            app:layout_constraintRight_toLeftOf="@id/game_of_player_two"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/game_of_player_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/point_of_player_two"
            app:layout_constraintRight_toLeftOf="@id/set_of_player_two"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/set_of_player_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/game_of_player_two"
            app:layout_constraintRight_toLeftOf="@id/button_of_add_point_two"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/button_of_add_point_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_point_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/set_of_player_two"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
